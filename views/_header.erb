<section class="header">
  <% if session[:current_user] %>
    <% if session[:current_user][:gender] == "female" %>
      <img width="100%"src="/images/skyline.jpg" alt="">
    <% elsif session[:current_user][:gender] == "male" %>
      <img width="100%"src="/images/skyline_blue.jpg" alt="">
    <% end %>
  <% else %>
    <img width="100%"src="/images/skyline_neutral.jpg" alt="">
  <% end %>



  <section id="blackBar">
    <h1 id="page_title"><a href="/">WDI Wiki</a></h1>
      <section id="top_nav">
        <li>
          <form class="header_search" action="/search" method="get">
            <input type="search" name="search" id="search" placeholder="search">
            <input class="button" type="submit" value="Go">
          </form>
        </li>
        <% if session[:current_user] %>
          <li><a class="header_link" id="logout" href="/logout">Logout</a></li>
          <li><a class="header_link" id="add_new_doc" href="/documents/new">Add New Article</a></li>
          <li><a class="header_link" id="view_profile" href="/users/<%=session[:current_user][:user_id]%>">View Profile</a></li>
        <%else %>
            <li><a class="header_link" id="log_in" href="<%=@url%>">Log in with Google</a></li>
        <% end %>
        <li><a class="header_link" id="browse" href="/documents">Browse Articles</a></li>
      </section>

  </section>
</section>
