<%= render(:erb, :_header) %>
<section class="doc_input_form">
  <% if params[:title_match] %><h2 id="search_error">This title already exists</h2><% end %>
  <% if @create_new %>
  <form action="/documents" method="post">
    <label>Title: </label>
      <input class="title_input" type="text" name="document[title]" id="doc_title" required>
    <label for="content">Please make sure you are using Markdown when inputing document contents</label><br>
      <textarea name="document[content]" id="content" required></textarea><br>
        <br>
    <label>Tags: </label>
      <section id="tag_list">
      <input type="hidden" id="empty" name="document[tags[]]" checked />
          <% @tags.each do |tag| %>
            <%= render(:erb, :_tags, :locals => {:tag => tag}) %>
          <% end %>
          <label class="smaller_text">Add tags(seperate with commas) </label>
          <input class="title_input" type="text" name="user_input_tag" id="input_box">
      </section><br>
      <input class="submit_button" type="submit">
  </form>
  <% else %>
    <h2 id="search_error">You are not authorized to make this adustment</h2>
  <% end %>
</section>
